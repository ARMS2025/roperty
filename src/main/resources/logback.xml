<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true">

    <jmxConfigurator/>

    <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5p %d{ISO8601} [%t] %c - %m%n%xEx</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="ConsoleAppender"/>
    </root>

</configuration>